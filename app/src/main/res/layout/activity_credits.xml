<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/deepfield16x9"
    tools:context="one.almostd.sprong.Credits">

    <com.google.android.gms.ads.AdView
        android:id="@+id/creditsAdView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/credits_ad_unit_id">
    </com.google.android.gms.ads.AdView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:text="New Text"
        android:id="@+id/CreditsText"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#FFFF"
        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp"
        android:layout_above="@+id/Logo" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/logosmallblack"
        android:src="@drawable/button_border"
        android:id="@+id/Logo"
        android:layout_above="@+id/creditsAdView"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
